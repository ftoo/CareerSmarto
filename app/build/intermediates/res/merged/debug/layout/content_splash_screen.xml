<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context=".SplashScreen"
    tools:showIn="@layout/activity_splash_screen">

    <LinearLayout
        android:id="@+id/firstlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/secondLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

    </LinearLayout>


    <ImageView
        android:id="@+id/img_test"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/report"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="138dp" />

    <TextView
        android:id="@+id/txt_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a Test"
        android:textColor="#9bbbf7"

        android:textSize="16sp"
        android:layout_weight="3"
        android:layout_below="@+id/img_test"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_below="@+id/img_professional"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/txt_professional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professional Say"
            android:textColor="#9bbbf7"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_weight="3" />

</LinearLayout>

    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/imageView2"-->
        <!--android:src="@drawable/graduate"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_centerHorizontal="true" />-->

    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/txt_test"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp">

        <ImageView
            android:id="@+id/img_personality"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/mental"
            android:layout_marginLeft="30dp"
           />

        <TextView
            android:id="@+id/txt_personality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Understand You"
            android:textColor="#9bbbf7"
            android:textSize="16sp"
           />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_professional"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/businessman"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_alignTop="@+id/firstlayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
